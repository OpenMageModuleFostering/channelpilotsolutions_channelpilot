<config>
	<modules>
		<Channelpilotsolutions_Channelpilot>
			<version>2.3.1</version>
		</Channelpilotsolutions_Channelpilot>
	</modules>
	<global>
        <index>
            <indexer>
                <channelpilot_feed_export>
                    <model>channelpilot/feedexport_indexer</model>
                </channelpilot_feed_export>
            </indexer>
        </index>
		<models>
			<channelpilot_adminhtml>
				<class>Channelpilotsolutions_Channelpilot_Adminhtml_Model</class>
			</channelpilot_adminhtml>
			<channelpilot>
				<class>Channelpilotsolutions_Channelpilot_Model</class>
				<resourceModel>channelpilot_resource</resourceModel>
			</channelpilot>
			<channelpilot_resource>
                <class>Channelpilotsolutions_Channelpilot_Model_Resource</class>
				<entities>
					<registration>
						<table>cp_registration</table>
					</registration>
					<order>
						<table>cp_marketplace_orders</table>
					</order>
					<order_item>
						<table>cp_marketplace_order_items</table>
					</order_item>
                    <order_shipment>
                        <table>cp_marketplace_order_shipment</table>
                    </order_shipment>
					<prices>
						<table>cp_prices</table>
					</prices>
					<logs>
						<table>cp_logging</table>
					</logs>
                    <product_feed_export_index>
                        <table>cp_product_feed_export_index</table>
                    </product_feed_export_index>
				</entities>
			</channelpilot_resource>
		</models>
		<resources>
			<default_setup>
				<connection>
					<charset>utf8</charset>
				</connection>
			</default_setup>
			<channelpilot_setup>
				<setup>
					<module>Channelpilotsolutions_Channelpilot</module>
				</setup>
				<connection>
					<charset>utf8</charset>
					<use>core_setup</use>
				</connection>
			</channelpilot_setup>
		</resources>
		<extraconfig />
		<blocks>
			<channelpilot_core>
				<class>Channelpilotsolutions_Channelpilot_Block</class>
			</channelpilot_core>
		</blocks>
		<helpers>
			<channelpilot>
				<class>Channelpilotsolutions_Channelpilot_Helper</class>
			</channelpilot>
		</helpers>
        <events>
            <model_config_data_save_before>
                <observers>
                    <cp_check_for_changed_export_data_fields>
                        <type>singleton</type>
                        <class>channelpilot/observer</class>
                        <method>modelConfigDataSaveBefore</method>
                    </cp_check_for_changed_export_data_fields>
                </observers>
            </model_config_data_save_before>
        </events>
	</global>
	<adminhtml>
		<translate>
			<modules>
				<Channelpilotsolutions_Channelpilot>
					<files>
						<default>Channelpilotsolutions_Channelpilot.csv</default>
					</files>
				</Channelpilotsolutions_Channelpilot>
			</modules>
		</translate>
        <layout>
            <updates>
                <channelpilotsolutions_channelpilot>
                    <file>channelpilot.xml</file>
                </channelpilotsolutions_channelpilot>
            </updates>
        </layout>
	</adminhtml>
	<frontend>
		<routers>
			<channelpilot>
				<use>standard</use>
				<args>
					<module>Channelpilotsolutions_Channelpilot</module>
					<frontName>channelpilot</frontName>
				</args>
			</channelpilot>
		</routers>
		<layout>
			<updates>
				<channelpilotsolutions_channelpilot>
					<file>Channelpilotsolutions/channelpilot.xml</file>
				</channelpilotsolutions_channelpilot>
			</updates>
		</layout>
	</frontend>
	<default>
        <payment>
            <cp_mp>
                <active>0</active>
                <model>channelpilot/payment</model>
                <order_status>processing</order_status>
                <payment_action>authorize</payment_action>
                <allowspecific>0</allowspecific>
                <email_customer>0</email_customer>
				<title>ChannelPilot Marketplace Payment</title>
            </cp_mp>
        </payment>
		<carriers>
			<cpshipping>
				<active>0</active>
                <backend_only>1</backend_only>
                <price>0.0</price>
				<sallowspecific>0</sallowspecific>
				<model>channelpilot/carrier_cpshipping</model>
				<name>ChannelPilot Shipping</name>
				<title>ChannelPilot Shipping</title>
				<specificerrmsg>This shipping method is currently unavailable.</specificerrmsg>
			</cpshipping>
		</carriers>
        <channelpilot_general>
            <channelpilot_general>
                <channelpilot_useNews>0</channelpilot_useNews>
                <channelpilot_checkIp>1</channelpilot_checkIp>
                <channelpilot_articlenumber>product_id</channelpilot_articlenumber>
                <seller_api_wsdl_url>https://seller.api.channelpilot.com/3_2?wsdl</seller_api_wsdl_url>
            </channelpilot_general>
        </channelpilot_general>
        <channelpilot_tracking>
            <channelpilot_tracking>
                <channelpilot_useTracking>0</channelpilot_useTracking>
                <method>2</method>
                <channelpilot_cookiemode>last</channelpilot_cookiemode>
            </channelpilot_tracking>
        </channelpilot_tracking>
        <channelpilot_export>
            <channelpilot_productfeed>
                <channelpilot_export_method>1</channelpilot_export_method>
                <channelpilot_useExport>0</channelpilot_useExport>
                <product_url_generation_method>4</product_url_generation_method>
            </channelpilot_productfeed>
        </channelpilot_export>
        <channelpilot_marketplace>
            <channelpilot_marketplace>
                <channelpilot_useMarketplaces>0</channelpilot_useMarketplaces>
                <use_admin_mode>0</use_admin_mode>
                <create_order_comment>0</create_order_comment>
                <which_external_id_for_ebay_orders>orderId</which_external_id_for_ebay_orders>
            </channelpilot_marketplace>
        </channelpilot_marketplace>
		<channelpilot_marketplace>
			<channelpilot_marketplace>
                <channelpilot_useMarketplaces>0</channelpilot_useMarketplaces>
                <use_admin_mode>0</use_admin_mode>
                <create_order_comment>0</create_order_comment>
                <which_field_for_externalTransactionId>orderComment</which_field_for_externalTransactionId>
            </channelpilot_marketplace>
		</channelpilot_marketplace>
        <channelpilot_pricecontrol>
            <channelpilot_general>
                <channelpilot_usePricecontrol>0</channelpilot_usePricecontrol>
                <channelpilot_saveGrossOrNetPrices>gross</channelpilot_saveGrossOrNetPrices>
                <channelpilot_generalPriceField>price</channelpilot_generalPriceField>
            </channelpilot_general>
        </channelpilot_pricecontrol>
    </default>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Channelpilotsolutions_Channelpilot after="Mage_Adminhtml">Channelpilotsolutions_Channelpilot_Adminhtml</Channelpilotsolutions_Channelpilot>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
</config>